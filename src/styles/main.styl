@font-face
  font-family: 'sf_distant_galaxyregular';
  src: url('/fonts/sf_distant_galaxy-webfont.eot');
  src: url('/fonts/sf_distant_galaxy-webfont.eot?#iefix') format('embedded-opentype'),
       url('/fonts/sf_distant_galaxy-webfont.woff2') format('woff2'),
       url('/fonts/sf_distant_galaxy-webfont.woff') format('woff'),
       url('/fonts/sf_distant_galaxy-webfont.ttf') format('truetype'),
       url('/fonts/sf_distant_galaxy-webfont.svg#sf_distant_galaxyregular') format('svg');
  font-weight: normal;
  font-style: normal;

html
  height: 100%;

body
  font-family: 'sf_distant_galaxyregular';
  margin: 0 0 1px 0; /* the extra 1px allows the iOS inner/outer check to work */
  background: #000;
  overflow: hidden;
  position: relative;
  height: 100%;

.body-stars
  background: #000 url('/images/background.png') repeat; 

.font-loader
  position: absolute;
  left: -1000em;

.container
  width: 100%;
  height: 100%;
  position: absolute;

.container-story
  perspective: 300px;

.container-story canvas
  transform-origin: 50% 100%;
  transform: rotateX(25deg); 

.orientation
  margin: 0 auto;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url(/images/orientation.jpg); 
  background-repeat: no-repeat;
  background-position: center;
  background-color: rgb(0, 0, 0);
  z-index: 999;
  display: none;